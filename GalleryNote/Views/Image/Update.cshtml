@model Image

<h2>Update Image</h2>

<form asp-action="Update" method="post">
    <input type="hidden" asp-for="ImageId" />
    <input type="hidden" asp-for="UploadedById" />

    <!--Bio-->
    <div class="form-group">
        <label asp-for="Bio"></label>
        <input asp-for="Bio" class="form-control" />
        <span asp-validation-for="Bio" class="text-danger"></span>
    </div>

    <!--ImageUrl, can't be updated-->
    <div class="form-group">
        <label asp-for="ImageUrl"></label>
        <input asp-for="ImageUrl" class="form-control" readonly />
    </div>

    <!--UploadedBy, can't be edited-->
    <div class="form-group">
        <label asp-for="UploadedBy"></label>
        <input asp-for="UploadedBy" class="form-control" readonly />
    </div>

    <div class="mt-4">
        <button type="submit" class="btn btn-primary">Save Changes</button>
        <a asp-action="Grid" class="btn btn-secondary">Cancel</a>
    </div>
</form>
