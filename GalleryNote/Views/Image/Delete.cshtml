@model Image

<div style="margin-top: 50px;">
    <h3 style="margin-bottom: 20px;">Are you sure you want to delete this image?</h3>
    <div>
        <h4>Image Details</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">Image Id</dt>
            <dd class="col-sm-10">@Model.ImageId</dd>

            <dt class="col-sm-2">Bio</dt>
            <dd class="col-sm-10">@Model.Bio</dd>

            <dt class="col-sm-2">Uploaded By</dt>
            <dd class="col-sm-10">@Model.UploadedBy</dd>

            <dt class="col-sm-2">Image</dt>
            <dd class="col-sm-10">
                <img src="@Model.ImageUrl" alt="Image" style="max-width: 200px; max-height: 200px;" />
            </dd>
        </dl>

        <form asp-action="DeleteConfirmed" asp-route-id="@Model.ImageId" method="post">
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="Grid" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>