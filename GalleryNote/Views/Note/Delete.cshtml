@model Note

<div style="margin-top: 50px;">
    <h3 style="margin-bottom: 20px;">Are you sure you want to delete this note?</h3>
    <div>
        <h4>Note Details</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">Note Id</dt>
            <dd class="col-sm-10">@Model.Id</dd>

            <dt class="col-sm-2">Content</dt>
            <dd class="col-sm-10">@Model.Content</dd>

            <dt class="col-sm-2">Uploaded By</dt>
            <dd class="col-sm-10">@Model.UploadedBy</dd>
        </dl>

        <form asp-action="DeleteConfirmed" asp-route-id="@Model.Id" method="post">
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="Grid" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>
