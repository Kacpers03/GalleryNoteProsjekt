@{
    ViewData["Title"] = "Home Page";
}

<div class="container-fluid" style="background-color: #dbeeff; height: 100vh;">
    <div class="container text-center py-5">
        <h1 class="display-4 mb-4">Welcome to GalleryNote</h1>
        <p class="lead mb-5">
            Discover our collection of images and notes, and share your own!
        </p>

        <div class="d-flex justify-content-center gap-4">
            <!--Button for View Images-->
            <a asp-controller="Image" asp-action="Grid" class="btn btn-primary btn-lg d-flex align-items-center">
                <i class="bi bi-images me-2" style="font-size: 1.5rem;"></i>
                View Images
            </a>

            <!--Button for View Notes-->
            <a asp-controller="Note" asp-action="Grid" class="btn btn-secondary btn-lg d-flex align-items-center">
                <i class="bi bi-journal-text me-2" style="font-size: 1.5rem;"></i>
                View Notes
            </a>
        </div>

    </div>

    <!--Moving images-->
    <div class="moving-images-container d-flex justify-content-center align-items-center">
        <img src="/images/example1.jpg" class="moving-image" alt="Example Image 1">
        <img src="/images/example2.jpg" class="moving-image" alt="Example Image 2">
        <img src="/images/example3.jpg" class="moving-image" alt="Example Image 3">
    </div>
</div>



<style>

/*Background color*/
body {
    background-color: #dbeeff; /*Light blue background*/
}

/*Container for moving images*/
.moving-images-container {
    position: relative;
    height: 300px;
    overflow: hidden;
    margin-top: 50px;
    width: 100%;
}

/* Style for moving images*/
.moving-image {
    position: absolute;
    width: 250px;
    height: auto;
    animation: smooth-move 12s infinite linear;
    object-fit: cover;
    opacity: 0;
}

.moving-image:nth-child(1) {
    animation-delay: 0s;
}
.moving-image:nth-child(2) {
    animation-delay: 4s;
}
.moving-image:nth-child(3) {
    animation-delay: 8s;
}

/* Smooth transition */
@@keyframes smooth-move {
    0% {
        transform: translateX(-100%); /*Start off the left side*/
        opacity: 0; /*Invisible*/
    }
    25% {
        opacity: 1; /*Gradually become visible*/
    }
    50% {
        transform: translateX(50%); /*Move to the center*/
        opacity: 1; /*Fully visible*/
    }
    75% {
        opacity: 1; /*Stay visible*/
    }
    100% {
        transform: translateX(200%); /*Move out to the right side*/
        opacity: 0; /*Gradually become invisible*/
    }
}

</style>